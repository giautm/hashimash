{
  "variables": {
    "gcp_project_id": null
  },
  "builders": [
    {
      "type": "docker",
      "image": "golang:1.16.3",
      "commit": "true",
      "pull": "true",
      "changes": [
        "ONBUILD mkdir /go/src/web",
        "WORKDIR /go/src/web",
        "ENV GO111MODULE on",
        "ENTRYPOINT [\"main\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "web/",
      "destination": "/go/src/web"
    },
    {
      "type": "shell",
      "inline": [
        "cd /go/src/web",
        "go install cmd/main.go",
        "apt-get update",
        "apt-get install -y curl",
        "curl -sL https://deb.nodesource.com/setup_13.x | bash -",
        "apt-get install -y nodejs",
        "cd /go/src/web/js",
        "npm rebuild node-sass",
        "npm install",
        "npm run build"

      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "gcr.io/{{user `gcp_project_id`}}/web",
        "tag": "latest"
      },
      {
        "type": "docker-push"
      }
    ]
  ]
}